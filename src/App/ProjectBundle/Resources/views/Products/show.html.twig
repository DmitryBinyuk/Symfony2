{% extends "::base.html.twig" %}

{% block title %}AppProjectBundle:Products:show{% endblock %}

{% block body %}

<div class="row">
<h2>{{ 'products.title'|trans({}, 'AppProjectBundle') }}:</h2>
</div>
    <div class="row">
      <div class="span12">        
        <ul class="thumbnails">
    {% for item in pagination %}
    
          <li class="span3">
            <div class="thumbnail">
              <div class="caption">

                <h3>{{ item.name }}</h3>
              </div>
              <div>
              {% media item.media, 'small' %}
              </div><br>
              <div class="thumbnail-pad">
                  <p>{{ item.description }}</p>
                  <a href="{{ path('product', {'id': item.id}) }}" class="btn btn_">{{ 'products.more_info'|trans({}, 'AppProjectBundle') }}</a>
              </div>
            </div>
          </li>
        
    {% endfor %}
     </ul>
      </div>
    </div>
<div class="row">
<div class="span6 offset3">
<div class="text-center navigation">
    {{ knp_pagination_render(pagination) }}
</div>
</div>
</div>
    
{% endblock %}
