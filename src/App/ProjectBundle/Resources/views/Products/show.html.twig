{% extends "::base.html.twig" %}

{% block title %}AppProjectBundle:Products:show{% endblock %}

{% block body %}
    
{#<div class="row">#}

{#<div class="span6 offset3">
<div class="span5 pull-right">#}
<div class="row">
<h2>Products</h2>
</div>
    <div class="row">
      <div class="span12">        
        <ul class="thumbnails">
    {% for item in pagination %}
    
          <li class="span3">
            <div class="thumbnail">
              <div class="caption">
{#              	<img src="img/img-1.png" alt="">#}
                <h3>{{ item.name }}</h3>
              </div>
              <div>
              {% media item.media, 'small' %}
              </div><br>
              <div class="thumbnail-pad">
                  <p>{{ item.description }}</p>
                  <a href="{{ path('product', {'id': item.id}) }}" class="btn btn_">more info</a>
              </div>
            </div>
          </li>
        
    {% endfor %}
     </ul>
      </div>
    </div> 
{#</div>
</div>#}
{#</div>#}
<div class="row">
<div class="span6 offset3">
<div class="text-center navigation">
    {{ knp_pagination_render(pagination) }}
</div>
</div>
</div>
    
{% endblock %}
