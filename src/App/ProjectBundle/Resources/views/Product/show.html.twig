{% extends "::base.html.twig" %}

{% block title %}AppProjectBundle:Product:show{% endblock %}

{% block body %}

<div class="row">

    <div class="span12">
        <h2>{{product[0].name}}</h2>
        <div class="span3 col-lg-1 col-offset-6 centered">
            
            {% media product[0].media, 'big' %}
            <h5>Description:</h5>
            <p>{{ product[0].description }}</p>

        </div>
        <div class="span3 col-lg-1 pull-right">
            <h5>Weather:</h5>
            <p>
                <img src="{{ weather['icon'] }}" alt="Weather icon" height="42" width="42">
                {{ weather['temperature'] }}
            </p>
            <p>Measurement time: {{ weather['time'] }}</p>
            <p>Wind speed: {{ weather['wind_speed'] }}</p>
            <p>Pressure: {{ weather['pressure'] }}</p>
            <p>{{ weather['description'] }}</p>
        </div>
    </div> 
</div>    
{% endblock %}
