{% extends "::base-custom-admin.html.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="container">
            <h2>Producers</h2>
            <h3><a class="btn btn-info btn-md" href="{{ path('admin-producers-create') }}">Create producer</a></h3>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Country</th>
                    <th>Description</th>
                    <th>Options</th>
                </tr>
                </thead>
                <tbody>
                    {% for producer in producers %}
                        <tr>
                            <td>{{ producer.name }}</td>
                            <td>{{ producer.country }}</td>
                            <td>{{ producer.description }}</td>
                            <td>
                                <a class="btn btn-primary btn-md" href="{{ path('admin-producers-show', {'id': producer.id }) }}">view</a>
                                <a class="btn btn-success btn-md" href="{{ path('admin-producers-update', {'id': producer.id }) }}">update</a>
                                <a type="button" class="btn delete-producer btn-danger btn-md" data-producer-id= {{ producer.id }} data-toggle="modal" data-target="#deleteProducerModal">
                                    delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <!-- Modal -->
            <div id="deleteProducerModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Producer delete</h4>
                        </div>
                        <div class="modal-body">
                            <p>Do you really want to delete this producer?</p>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-default delete-producer-submit" href="#">delete</a>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
