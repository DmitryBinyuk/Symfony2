{% extends "::base-custom-admin.html.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="container">
            <h2>Discounts</h2>
            <h3><a class="btn btn-info btn-md" href="{{ path('admin-discounts-create') }}">Create discount</a></h3>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Total count</th>
                    <th>Total price</th>
                    <th>Discount percent</th>
                    <th>Options</th>
                </tr>
                </thead>
                <tbody>
                    {% for discount in discounts %}
                        <tr>
                            <td>{{ discount.title }}</td>
                            <td>{{ discount.totalCount }}</td>
                            <td>{{ discount.totalPrice }}</td>
                            <td>{{ discount.discountSizePercent }}</td>
                            <td>
                                <a class="btn btn-primary btn-md" href="{{ path('admin-discounts-show', {'id': discount.id }) }}">view</a>
                                <a class="btn btn-success btn-md" href="{{ path('admin-discounts-update', {'id': discount.id }) }}">update</a>
                                <a type="button" class="btn delete-discount btn-danger btn-md" data-discount-id= {{ discount.id }} data-toggle="modal" data-target="#deleteDiscountModal">
                                    delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <!-- Modal -->
            <div id="deleteDiscountModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Discount delete</h4>
                        </div>
                        <div class="modal-body">
                            <p>Do you really want to delete this discount?</p>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-default delete-discount-submit" href="#">delete</a>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
