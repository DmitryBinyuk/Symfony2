{% extends "::base-custom-admin.html.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="container">
            <h3>Users:</h3>
            <h3><a class="btn btn-info btn-md" href="{{ path('admin-users-create') }}">Create user</a></h3>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Locked</th>
                    <th>Options</th>
                </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.locked ? 'Yes':'No' }}</td>
                            <td>
                                <a class="btn btn-primary btn-md" href="{{ path('admin-users-show', {'id': user.id }) }}">view</a>
                                <a class="btn btn-success btn-md" href="{{ path('admin-users-update', {'id': user.id }) }}">update</a>
                                <a type="button" class="btn delete-user btn-danger btn-md" data-user-id= {{ user.id }} data-toggle="modal" data-target="#deleteUserModal">
                                    delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <!-- Modal -->
            <div id="deleteUserModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Discount delete</h4>
                        </div>
                        <div class="modal-body">
                            <p>Do you really want to delete this user?</p>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-default delete-user-submit" href="#">delete</a>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
